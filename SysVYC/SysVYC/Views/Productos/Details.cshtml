@model SysVYC.Models.PRODUCTO

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>Details</h2>

<div>
    <h4>PRODUCTO</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre del Producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOMBREPRODUCTO)
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DESCRIPCIONPRODUCTO)
        </dd>

        <dt>
            Marca
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MARCA.NOMBREMARCA)
        </dd>
        
        <dt>
            Modelo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MODELOPRODUCTO)
        </dd>

        <dt>
            Costo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.COSTOPRODUCTO)
        </dd>

        <dt>
            Precio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PRECIOPRODUCTO)
        </dd>

        

    </dl>
</div>
<p>
    @Html.ActionLink("Regresar a la Lista", "Index", "", new { @class = "btn btn-primary" })
    @Html.ActionLink("Modificar", "Edit", new { id = Model.IDPRODUCTO }, new { @class="btn btn-primary" })
</p>
