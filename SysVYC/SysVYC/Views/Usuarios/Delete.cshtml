@model SysVYC.Models.USUARIO

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>Eliminar</h2>

<h3>¿Esta seguro de Eliminar el Usuario?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.USERNAME)
        </dd>
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMPLEADO.NOMBREEMPLEADO)
        </dd>

        <dt>
            Tipo de Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TIPOUSUARIO.TIPOUSUARIO1)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Regresar a la Lista", "Index", "", new { @class = "btn btn-primary" })
            <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        </div>
    }
</div>
