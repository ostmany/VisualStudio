@model IEnumerable<SysVYC.Models.USUARIO>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Nuevo USuario", "Create", "", new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Nombre
        </th>
        <th>
            Tipo de Usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.USERNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMPLEADO.NOMBREEMPLEADO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TIPOUSUARIO.TIPOUSUARIO1)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.IDUSUARIO }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Detalles", "Details", new { id = item.IDUSUARIO }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id = item.IDUSUARIO }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
