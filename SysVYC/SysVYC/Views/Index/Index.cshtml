@using SysVYC.Models
@model USUARIO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/style.css" rel="stylesheet">
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <img class="profile-img" src="~/Content/img/logo.png" alt="">
                @using (Html.BeginForm("Index", "Index", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    if(@ViewBag.Message != null)
                    {
                        <div style="border:1px solid red">
                            @ViewBag.Message
                        </div>
                    }
    <table class="table table-fluid">
        <tr>
            <td>@Html.TextBoxFor(a => a.USERNAME, new { @class = "form-control", placeholder = "Usuario" }) @Html.ValidationMessageFor(a => a.USERNAME)</td>

        </tr>
        <tr>
            <td>@Html.PasswordFor(a => a.PASSWORD, new { @class = "form-control", placeholder = "Contraseña" }) @Html.ValidationMessageFor(a => a.PASSWORD)</td>
        </tr>
        <tr>
            <td><input class="btn btn-lg btn-primary btn-block" type="submit" value="Iniciar Sesión"></td>
        </tr>
    </table>
                }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")